@model IEnumerable<ApplicationUser>

@{
    ViewBag.Title = "All Users";
}

<h1>All Users</h1>

@if (Model.Any())
{

    <table class="table">
        <thead class="table-primary">
            <tr>

                <th scope="col">Name</th>
                <th scope="col">Email</th>
                <th scope="col">city</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {

                <tr>

                    <td>@user.UserName</td>
                    <td>@user.Email</td>
                    <td>@user.City</td>
                </tr>

            }
        </tbody>
    </table>
}
else
{
    <div class="card">
        <div class="card-header">
            No citys created yet
        </div>
        <div class="card-body">
            <h5 class="card-title">
                Use the button below to create a city
            </h5>
            <a class="btn btn-primary" style="width:auto"
               asp-controller="administration" asp-action="Createcity">
                Create city
            </a>
        </div>
</div>
}